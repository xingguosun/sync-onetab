{
  "name": "Calab - My Search Engine",
  "version": "1.0",
  "description": "Add webpages to your own search engine",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "contextMenus",
    "identity",
    "identity.email",
    "*://*/*",
    "file://*/*",
    "https://*/*",
    "http://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/search16.png",
      "32": "images/search32.png",
      "48": "images/search48.png",
      "128": "images/search128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/search16.png",
    "32": "images/search32.png",
    "48": "images/search48.png",
    "128": "images/search128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "manifest_version": 2
}